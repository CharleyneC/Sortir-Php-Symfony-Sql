{% extends 'base.html.twig' %}
{% block title %}Profil{% endblock %}
{% block body %}
    {% block header %}
        {% block nav %}
            {% include ("navbar.html.twig") %}
        {% endblock %}
        <div class="container-fluid p-3">
            {% for msg in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ msg }}
                </div>
            {% endfor %}
        </div>
    {% endblock %}
    <div class="container-fluid p-1 pl-5 pr-5">
        <h3 class="text-center">Modifier ton profil</h3>

        {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}})}}
            {{ form_row(registrationForm.photoDeProfil) }}
            {{ form_row(registrationForm.pseudo) }}
            {{ form_row(registrationForm.mail) }}
            {{ form_row(registrationForm.plainPassword, {label: 'Mot de Passe'}) }}
            {{ form_row(registrationForm.prenom) }}
            {{ form_row(registrationForm.nom) }}
            {{ form_row(registrationForm.telephone) }}
            <div style="display:none">
                {{ form_row(registrationForm.campus) }}
            </div>
        <button class="btn btn-lg btn-primary" type="submit">Modifier</button>
    </div>
        {{ form_rest(registrationForm) }}

{% endblock %}
