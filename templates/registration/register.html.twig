{% extends 'base.html.twig' %}
{% block title %}Inscrire un utilisateur{% endblock %}
{% block body %}
    {% block header %}
        {% block nav %}
            {% include ("navbar.html.twig") %}
        {% endblock %}
        <div class="container-fluid p-3">
            {% for msg in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ msg }}
                </div>
            {% endfor %}
        </div>
    {% endblock %}
    <div class="container-fluid p-5 pl-5 pr-5">
        <h3 class="text-center">Inscrire un utilisateur</h3>
        {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_row(registrationForm.pseudo) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.telephone) }}
        {{ form_row(registrationForm.mail) }}
        {{ form_row(registrationForm.campus) }}
        {{ form_row(registrationForm.plainPassword) }}
        <div style="display:none">
            {{ form_row(registrationForm.photoDeProfil) }}
        </div>
    <div class="row col-2 p-3 ">
        <button class="btn btn-lg btn-primary" type="submit">Register</button>
    </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}